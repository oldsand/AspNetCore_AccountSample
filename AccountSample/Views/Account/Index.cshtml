@model LoginViewModel

@{
    ViewBag.Title = "Log In";
}

<div class="text-danger" asp-validation-summary="All"></div>
<form asp-action="Login" asp-controller="Account" method="post">
    <div class="form-group">
        <label asp-for="Name"></label>
        <div><span asp-validation-for="Name" class="text-danger"></span></div>
        <input asp-for="Name" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="Password"></label>
        <div><span asp-validation-for="Password" class="text-danger"></span></div>
        <input asp-for="Password" class="form-control" />
    </div>
    <button class="btn btn-primary" type="submit">Log In</button>

    <br />

    @*<a asp-action="AddAdminAccount" asp-controller="Account" class="btn btn-primary">Add Admin User Account</a>*@
</form>

<form asp-action="AddAdminAccount">
    <button class="btn btn-primary" type="submit">Add Admin User Account</button>
</form>



